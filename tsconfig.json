// note to future self: split chunks
{
    "compilerOptions": {
      "useDefineForClassFields": true,
      "allowImportingTsExtensions": true,
      "noEmit": true,
      "jsx": "react",
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "sourceMap": true,
      "outDir": "frontend_dist",

      // linting
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true
    },
    "include": ["assets/**/*", "declarations.d.ts"],
}